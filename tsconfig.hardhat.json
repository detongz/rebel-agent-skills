{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "scripts/**/*",
    "test/**/*",
    "typechain-types/**/*"
  ],
  "exclude": [
    "node_modules",
    "frontend",
    "packages",
    "artifacts",
    "cache"
  ]
}
