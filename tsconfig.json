{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "typeRoots": ["node_modules/@types"],
    "types": ["node"]
  },
  "include": [
    "scripts/**/*",
    "test/**/*",
    "contracts/**/*",
    "typechain-types/**/*"
  ],
  "exclude": [
    "node_modules",
    "frontend",
    "packages",
    "artifacts",
    "cache"
  ]
}
